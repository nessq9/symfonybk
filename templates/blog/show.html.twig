    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ blog.photos }}</td>
            </tr>
            <tr>
